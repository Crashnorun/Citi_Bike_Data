<UserControl x:Class="Citi_Bike_Data_02.UI.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Citi_Bike_Data_02.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ProgressBar x:Name="progressBar1" Margin="10,0,10,10" Height="10" VerticalAlignment="Bottom" Foreground="#FF06B03C" Background="#FFF7F7F7" BorderBrush="#FFF7F7F7"/>
        <Label x:Name="lbl_Status_01" Content="Label" Margin="10,0,10,20" Height="26" VerticalAlignment="Bottom"/>
        <Button x:Name="btn_ConnectDB" Content="Connect To DB" 
                HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" 
                Click="btn_CreateDB_Click" BorderBrush="{x:Null}"
                ToolTip="Test DB Connection" ToolTipService.ShowDuration="5000">
        </Button>
        <Button x:Name="btn_DlXML" Content="Download XML"
                HorizontalAlignment="Left" Margin="10,35,0,0" Height="26" VerticalAlignment="Top" Width="90"
                Click="btn_DlXML_Click" BorderBrush="{x:Null}"
                ToolTip="Download XML from AWS" ToolTipService.ShowDuration="5000">
        </Button>
    </Grid>
</UserControl>
